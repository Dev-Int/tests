{% block body %}

    <h1><i class="fa-solid fa-building"></i> Company</h1>

    <div class="row">
        <aside class="col-md-3">
            <nav class="menu">
                <ul>
                    <li>
                        <a href="{{ path('admin_company_update', { 'slug': company.slug }) }}" role="button" class="w100">
