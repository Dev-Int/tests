{% set slug = null %}

{{ form_label(form.parent) }}
<select name="{{ field_name(form.parent) }}" class="form-control">
    <option value="">{{ field_label(form.parent) }}</option>

    {% if form.vars.value.parent.slug is defined %}
        {% set slug = form.vars.value.parent.slug %}
    {% endif %}
    {% for label, value in field_choices(form.parent) %}
        <option value="{{ value }}"{% if slug is same as(value) %} selected{% endif %}>{{ label }}</option>
    {% endfor %}
</select>
